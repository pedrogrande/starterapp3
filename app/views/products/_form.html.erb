
<%= simple_form_for(@product, remote: true) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">

    <%= f.input :name %>
    <%= f.input :description %>
    <%= f.input :image %>
    <%= f.input :price %>
    <%= f.input :num_in_stock %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, class: 'btn btn-success' %>
  </div>
<% end %>
