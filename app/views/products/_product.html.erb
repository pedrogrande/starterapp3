<div class="card">
  <div class="card-body">
    <div class="row">
      <div class="col-md-2">
        <%= image_tag product.image_url, class: 'img-fluid' %>
      </div>
      <div class="col-md-10">
        <h5 class="card-title"><%= product.name %></h5>
        <p><%= product.description %></p>
      </div>
    </div>
  </div>
</div>
